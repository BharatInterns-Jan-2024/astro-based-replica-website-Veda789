---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href='https://fonts.googleapis.com/css?family=Roboto Mono' rel='stylesheet'>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>


main{
    width:100%;
    display: inline-flex;
    background-color: aliceblue;
    margin:0%;
    font-family: 'Roboto Mono';
}

.Menu{
    width: 40%;
    display:block;
    padding:30px;
    text-align: left;
	
}
#tit{
  margin:0px 50px ;
  width:70%;
  text-align:center;
}
#tit h3{
  margin-bottom:0px;
  padding-bottom:0px;

}
#tit h1{
  margin-top:0px;
  padding-top:0px;
  font-size:75px;
  line-height:75px;
  margin-bottom:0px;
  padding-bottom:0px;
}
.Menu p{
    margin:15px 50px ;
    width:70%;
    text-align:center;
    font-size:25px;
    border-top: 10px solid rgb(252, 231, 1);
    padding-top:5px;
    border-bottom: 5px solid rgb(252, 231, 1);
}
.Menu ol{
  font-size:15px;
  margin:45px 40px ;
  width:70%;

}
.Menu a{
  font-size:15px;
  color:rgb(8, 179, 253); 
}
.Menu a #bck{
  font-size:3px;
  margin:45px 60px ;
  width:70%;

}
.Content{
    width:66%;
    display:block;   
    text-align: left;
    margin:2%;
}
.Content p{
  font-size:15px;
  line-height: 25px;
}
#ph{
  line-height: 17px;
  color: rgb(96, 104, 112);
}

ol li{
    counter-reset: list-number -1;
}
.blk_bg{
     padding:1px 3px;
     color:rgb(255, 255, 255);
     background-color: rgb(0, 0, 0);
}


</style>
